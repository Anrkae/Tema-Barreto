    },
    {
      "type": "custom",
      "name": "Slide Manual",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    {
      "name": "Coverflow Carrossel",
      "category": "Imagens"
    }
  ]
}
{% endschema %}