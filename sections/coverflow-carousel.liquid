{% schema %}
{
  "name": "Coverflow Carrossel",
  "tag": "section",
  "class": "coverflow-carousel-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título do carrossel",
      "default": "Destaques"
    },
    {
      "type": "range",
      "id": "number_of_items",
      "label": "Número de itens",
      "min": 1,
      "max": 10,
      "default": 5
    },
    {
      "type": "range",
      "id": "slides_desktop",
      "label": "Itens no Desktop",
      "min": 1,
      "max": 5,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_tablet",
      "label": "Itens no Tablet",
      "min": 1,
      "max": 3,
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_mobile",
      "label": "Itens no Mobile",
      "min": 1,
      "max": 3,
      "default": 1
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Produto",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem do produto"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Nome do produto",
          "default": "Produto"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link do produto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coverflow Carrossel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="coverflow-carousel-wrapper page-width">
  {% if section.settings.title != blank %}
    <h2 class="coverflow-carousel-title">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="swiper coverflow-carousel-{{ section.id }}">
    <div class="swiper-wrapper">
      {% for block in section.blocks limit: section.settings.number_of_items %}
        <div class="swiper-slide">
          <div class="glass-card" data-title="{{ block.settings.title }}" data-image="{{ block.settings.image | image_url: width: 800 }}" data-link="{{ block.settings.link }}">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            {% else %}
              <div style="width:100%;height:200px;background:#eee;border-radius:16px;display:flex;align-items:center;justify-content:center;">
                Sem imagem
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<!-- Modal Popup -->
<div class="product-modal" id="product-modal-{{ section.id }}">
  <div class="product-modal-content">
    <span class="product-modal-close">&times;</span>
    <div class="product-modal-body">
      <div class="product-modal-image">
        <img id="product-modal-img" src="" alt="">
      </div>
      <div class="product-modal-info">
        <h2 id="product-modal-title"></h2>
        <a id="product-modal-link" class="product-modal-button" href="#">Ver detalhes</a>
      </div>
    </div>
  </div>
</div>

<!-- CSS -->
<style>
.coverflow-carousel-wrapper {
  padding: 60px 20px;
  text-align: center;
}

.coverflow-carousel-title {
  font-size: 2rem;
  margin-bottom: 30px;
}

/* Glassmorphism Card */
.glass-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.25);
  border: 1px solid rgba(255,255,255,0.2);
  padding: 20px;
  cursor: pointer;
  transition: transform 0.3s;
}

.glass-card:hover {
  transform: scale(1.05);
}

.glass-card img {
  width: 100%;
  max-width: 400px;
  border-radius: 16px;
  display: block;
}

/* Blur nos itens laterais */
.swiper-slide-prev,
.swiper-slide-next {
  filter: blur(4px) brightness(0.7);
  transform: scale(0.9);
}

.swiper-slide {
  transition: filter 0.3s, transform 0.3s;
}

/* Swiper navigation */
.swiper-button-next,
.swiper-button-prev {
  color: #fff;
}

.swiper-pagination-bullet {
  background: #fff;
}

/* Modal */
.product-modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0; top: 0;
  width: 100%; height: 100%;
  background-color: rgba(0,0,0,0.8);
  justify-content: center;
  align-items: center;
}

.product-modal-content {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 20px;
  padding: 30px;
  max-width: 600px;
  width: 90%;
  position: relative;
  color: white;
  text-align: center;
}

.product-modal-close {
  position: absolute;
  top: 15px;
  right: 25px;
  font-size: 30px;
  cursor: pointer;
}

.product-modal-body img {
  width: 100%;
  border-radius: 16px;
}

.product-modal-button {
  display: inline-block;
  margin-top: 20px;
  padding: 12px 24px;
  background-color: white;
  color: black;
  border-radius: 30px;
  text-decoration: none;
  font-weight: 600;
  transition: background-color 0.3s;
}

.product-modal-button:hover {
  background-color: #eee;
}
</style>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
  const swiper = new Swiper('.coverflow-carousel-{{ section.id }}', {
    effect: 'coverflow',
    grabCursor: true,
    centeredSlides: true,
    loop: true,
    autoplay: {
      delay: 4000,
      disableOnInteraction: false,
    },
    slidesPerView: {{ section.settings.slides_desktop }},
    coverflowEffect: {
      rotate: 50,
      stretch: 0,
      depth: 100,
      modifier: 1,
      slideShadows: true,
    },
    pagination: {
      el: '.coverflow-carousel-{{ section.id }} .swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.coverflow-carousel-{{ section.id }} .swiper-button-next',
      prevEl: '.coverflow-carousel-{{ section.id }} .swiper-button-prev',
    },
    breakpoints: {
      320: {
        slidesPerView: {{ section.settings.slides_mobile }}
      },
      768: {
        slidesPerView: {{ section.settings.slides_tablet }}
      },
      1024: {
        slidesPerView: {{ section.settings.slides_desktop }}
      }
    }
  });

  // Modal
  const modal = document.getElementById('product-modal-{{ section.id }}');
  const modalImg = document.getElementById('product-modal-img');
  const modalTitle = document.getElementById('product-modal-title');
  const modalLink = document.getElementById('product-modal-link');
  const closeBtn = modal.querySelector('.product-modal-close');

  document.querySelectorAll('.coverflow-carousel-{{ section.id }} .glass-card').forEach(card => {
    card.addEventListener('click', () => {
      const img = card.getAttribute('data-image');
      const title = card.getAttribute('data-title');
      const link = card.getAttribute('data-link');

      modalImg.src = img;
      modalTitle.innerText = title;
      modalLink.href = link;
      modal.style.display = 'flex';
    });
  });

  closeBtn.addEventListener('click', () => {
    modal.style.display = 'none';
  });

  window.addEventListener('click', (e) => {
    if (e.target == modal) {
      modal.style.display = 'none';
    }
  });
});
</script>