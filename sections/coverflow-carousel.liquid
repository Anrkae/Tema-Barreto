{% schema %}
{
  "name": "Coverflow Carrossel",
  "tag": "section",
  "class": "coverflow-carousel-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título do carrossel",
      "default": "Destaques"
    },
    {
      "type": "range",
      "id": "number_of_items",
      "label": "Número de itens",
      "min": 1,
      "max": 10,
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Produto",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem do produto"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Nome do produto",
          "default": "Produto"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link do produto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coverflow Carrossel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="coverflow-carousel-wrapper page-width">
  {% if section.settings.title != blank %}
    <h2 class="coverflow-carousel-title">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="swiper coverflow-carousel-{{ section.id }}">
    <div class="swiper-wrapper">
      {% for block in section.blocks limit: section.settings.number_of_items %}
        <div class="swiper-slide">
          <div class="glass-card" data-link="{{ block.settings.link }}">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            {% else %}
              <div style="width:100%;height:200px;background:#eee;border-radius:16px;display:flex;align-items:center;justify-content:center;">
                Sem imagem
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<!-- CSS -->
<style>
.coverflow-carousel-wrapper {
  padding: 60px 20px;
  text-align: center;
}

.coverflow-carousel-title {
  font-size: 2rem;
  margin-bottom: 30px;
}

/* Glassmorphism Card */
.glass-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.25);
  border: 1px solid rgba(255,255,255,0.2);
  padding: 20px;
  cursor: pointer;
  transition: transform 0.3s;
}

.glass-card:hover {
  transform: scale(1.05);
}

.glass-card img {
  width: 100%;
  max-width: 400px;
  border-radius: 16px;
  display: block;
}

/* Swiper navigation */
.swiper-button-next,
.swiper-button-prev {
  color: #fff;
}

.swiper-pagination-bullet {
  background: #fff;
}
</style>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
  const swiper = new Swiper('.coverflow-carousel-{{ section.id }}', {
    effect: 'coverflow',
    grabCursor: true,
    centeredSlides: true,
    loop: true,
    autoplay: {
      delay: 4000,
      disableOnInteraction: false,
    },
    slidesPerView: 'auto',
    coverflowEffect: {
      rotate: 50,
      stretch: 0,
      depth: 100,
      modifier: 1,
      slideShadows: true,
    },
    pagination: {
      el: '.coverflow-carousel-{{ section.id }} .swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.coverflow-carousel-{{ section.id }} .swiper-button-next',
      prevEl: '.coverflow-carousel-{{ section.id }} .swiper-button-prev',
    },
  });

  // Clique nos cards
  document.querySelectorAll('.coverflow-carousel-{{ section.id }} .glass-card').forEach(card => {
    card.addEventListener('click', () => {
      const link = card.getAttribute('data-link');
      if (link) {
        window.location.href = link;
      }
    });
  });
});
</script>