{% schema %}
{
  "name": "Coverflow Carousel",
  "tag": "section",
  "class": "coverflow-carousel-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título do carrossel",
      "default": "Destaques da loja"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção de produtos"
    },
    {
      "type": "select",
      "id": "effect",
      "label": "Efeito do carrossel",
      "default": "coverflow",
      "options": [
        { "value": "coverflow", "label": "Coverflow 3D" },
        { "value": "slide", "label": "Deslizante tradicional" }
      ]
    },
    {
      "type": "range",
      "id": "rotate",
      "label": "Coverflow - Rotação",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 50
    },
    {
      "type": "range",
      "id": "depth",
      "label": "Coverflow - Profundidade",
      "min": 0,
      "max": 500,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "stretch",
      "label": "Coverflow - Stretch",
      "min": -500,
      "max": 500,
      "step": 10,
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Exibir setas de navegação",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Exibir paginação (bolinhas)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_loop",
      "label": "Loop infinito",
      "default": true
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "label": "Slides visíveis no desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view_tablet",
      "label": "Slides visíveis no tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_per_view_mobile",
      "label": "Slides visíveis no mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Coverflow Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="coverflow-carousel-wrapper page-width">
  {% if section.settings.title != blank %}
    <h2 class="coverflow-carousel-title">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="swiper coverflow-carousel-{{ section.id }}">
    <div class="swiper-wrapper">
      {% if section.settings.collection != blank %}
        {% for product in collections[section.settings.collection].products %}
          <div class="swiper-slide">
            <a href="{{ product.url }}" class="coverflow-slide-link">
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                class="coverflow-slide-image"
                loading="lazy"
              >
              <p class="coverflow-slide-title">{{ product.title }}</p>
            </a>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..5) %}
          <div class="swiper-slide">
            <img src="https://via.placeholder.com/600x600?text=Produto+{{ i }}" alt="Produto {{ i }}">
            <p class="coverflow-slide-title">Produto {{ i }}</p>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_navigation %}
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    {% endif %}

    {% if section.settings.show_pagination %}
      <div class="swiper-pagination"></div>
    {% endif %}
  </div>
</div>

<style>
.coverflow-carousel-wrapper {
  padding: 60px 20px;
  text-align: center;
}

.coverflow-carousel-title {
  font-size: 2rem;
  margin-bottom: 30px;
}

.coverflow-carousel-{{ section.id }} .swiper-slide {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  transition: transform 0.3s;
}

.coverflow-slide-image {
  width: 100%;
  max-width: 400px;
  height: auto;
  display: block;
}

.coverflow-slide-title {
  margin-top: 12px;
  font-size: 1rem;
}

.swiper-button-next,
.swiper-button-prev {
  color: #333;
}

.swiper-pagination-bullet {
  background: #333;
}
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
  const swiper = new Swiper('.coverflow-carousel-{{ section.id }}', {
    effect: '{{ section.settings.effect }}',
    grabCursor: true,
    centeredSlides: true,
    loop: {{ section.settings.enable_loop }},
    slidesPerView: {{ section.settings.slides_per_view_desktop }},
    breakpoints: {
      1024: {
        slidesPerView: {{ section.settings.slides_per_view_desktop }},
      },
      768: {
        slidesPerView: {{ section.settings.slides_per_view_tablet }},
      },
      320: {
        slidesPerView: {{ section.settings.slides_per_view_mobile }},
      }
    },
    {% if section.settings.effect == 'coverflow' %}
    coverflowEffect: {
      rotate: {{ section.settings.rotate }},
      stretch: {{ section.settings.stretch }},
      depth: {{ section.settings.depth }},
      modifier: 1,
      slideShadows: true,
    },
    {% endif %}
    {% if section.settings.show_pagination %}
    pagination: {
      el: '.coverflow-carousel-{{ section.id }} .swiper-pagination',
      clickable: true,
    },
    {% endif %}
    {% if section.settings.show_navigation %}
    navigation: {
      nextEl: '.coverflow-carousel-{{ section.id }} .swiper-button-next',
      prevEl: '.coverflow-carousel-{{ section.id }} .swiper-button-prev',
    },
    {% endif %}
  });
});
</script>