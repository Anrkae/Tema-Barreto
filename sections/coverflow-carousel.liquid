{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.js' | asset_url | script_tag }}

<style>
  .coverflow-carousel {
    position: relative;
    padding: 2rem 0;
    background: transparent;
  }

  .coverflow-slide {
    backdrop-filter: blur(16px);
    background: rgba(255, 255, 255, 0.15);
    border-radius: 1rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: transform 0.4s ease;
    max-width: 350px;
    height: auto;
  }

  .coverflow-slide img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .swiper-slide-prev,
  .swiper-slide-next {
    filter: blur(6px);
    opacity: 0.6;
    transition: filter 0.6s ease, opacity 0.6s ease, transform 0.6s ease;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: {{ section.settings.arrow_color }};
  }

  .swiper-pagination-bullet {
    background: {{ section.settings.pagination_color }};
  }
</style>

<div class="coverflow-carousel">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% if block.type == 'product' and block.settings.product != blank %}
            {% assign product = all_products[block.settings.product] %}
            <div class="coverflow-slide" onclick="window.Focal.theme.openQuickView('{{ product.handle }}')">
              <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
            </div>
          {% elsif block.type == 'custom' and block.settings.image != blank %}
            <a href="{{ block.settings.link }}" class="coverflow-slide" target="_blank">
              <img src="{{ block.settings.image | image_url: width: 600 }}" alt="Custom Slide">
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>

    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

<script>
  const swiper = new Swiper('.swiper', {
    effect: 'coverflow',
    grabCursor: true,
    centeredSlides: true,
    slidesPerView: 'auto',
    loop: true,
    autoplay: {
      delay: {{ section.settings.autoplay_speed | times: 1000 }},
      disableOnInteraction: false,
    },
    coverflowEffect: {
      rotate: {{ section.settings.rotate }},
      stretch: {{ section.settings.stretch }},
      depth: {{ section.settings.depth }},
      modifier: {{ section.settings.modifier }},
      slideShadows: {{ section.settings.slide_shadows }},
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    breakpoints: {
      320: {
        slidesPerView: {{ section.settings.slides_mobile }},
      },
      768: {
        slidesPerView: {{ section.settings.slides_tablet }},
      },
      1024: {
        slidesPerView: {{ section.settings.slides_desktop }},
      },
    }
  });
</script>

