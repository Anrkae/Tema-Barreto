{% schema %}
{
  "name": "Coverflow",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "titulo",
      "label": "Título da seção",
      "default": "Destaques"
    },
    {
      "type": "checkbox",
      "id": "mostrar_titulo_card",
      "label": "Mostrar título no card",
      "default": true
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Proporção do card",
      "default": "4/5",
      "options": [
        { "value": "1/1", "label": "Quadrado (1:1)" },
        { "value": "4/5", "label": "Vertical (4:5)" },
        { "value": "16/9", "label": "Horizontal (16:9)" }
      ]
    },
    {
      "type": "range",
      "id": "rotate",
      "label": "Rotate",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "stretch",
      "label": "Stretch",
      "min": 0,
      "max": 300,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "depth",
      "label": "Depth",
      "min": 0,
      "max": 1000,
      "step": 50,
      "default": 300
    },
    {
      "type": "color",
      "id": "cor_fundo",
      "label": "Cor de fundo do card",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "borda_radius",
      "label": "Borda arredondada (px)",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "ativar_sombra",
      "label": "Ativar sombra nos cards",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "label": "Autoplay delay (ms)",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 3000
    },
    {
      "type": "range",
      "id": "slides_desktop",
      "label": "Slides desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_tablet",
      "label": "Slides tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_mobile",
      "label": "Slides mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagem",
          "label": "Imagem"
        },
        {
          "type": "product",
          "id": "produto",
          "label": "Produto"
        },
        {
          "type": "text",
          "id": "titulo_card",
          "label": "Título do card",
          "default": "Título"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coverflow",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="coverflow-section page-width">
  {% if section.settings.titulo != blank %}
    <h2 class="section-title">{{ section.settings.titulo }}</h2>
  {% endif %}

  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign produto = block.settings.produto %}
        <div class="swiper-slide">
          {% if produto %}
            <a href="{{ produto.url }}" class="card-link" aria-label="Ver produto {{ produto.title }}">
              <div class="card-wrapper">
                <img 
                  src="{{ block.settings.imagem | default: produto.featured_image | image_url: width: 800 }}" 
                  alt="{{ block.settings.titulo_card | default: produto.title | escape }}">
              </div>
            </a>
          {% else %}
            <div class="card-wrapper">
              {% if block.settings.imagem %}
                <img 
                  src="{{ block.settings.imagem | image_url: width: 800 }}" 
                  alt="{{ block.settings.titulo_card | escape }}">
              {% endif %}
            </div>
          {% endif %}
          {% if section.settings.mostrar_titulo_card and block.settings.titulo_card != blank %}
            <p class="card-title">{{ block.settings.titulo_card }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
  .coverflow-section {
    margin: 40px auto;
    text-align: center;
  }

  .swiper {
    width: 100%;
    max-width: 1400px;
  }

  .swiper-slide {
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.4s ease;
  }

  .card-link {
    display: block;
    width: 100%;
    text-decoration: none;
    cursor: pointer;
  }

  .card-wrapper {
    width: 100%;
    aspect-ratio: {{ section.settings.aspect_ratio }};
    background-color: {{ section.settings.cor_fundo | color_modify: 'alpha', 0.08 }};
    border-radius: {{ section.settings.borda_radius }}px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.4s ease;
    {% if section.settings.ativar_sombra %}
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    {% endif %}
  }

  .card-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .swiper-slide:hover .card-wrapper img {
    transform: scale(1.05);
  }

  .card-title {
    margin-top: 10px;
    color: white;
    font-size: 1.1rem;
  }

  .swiper-slide:not(.swiper-slide-active) {
    opacity: 0.5;
    filter: brightness(0.7);
    transform: scale(0.9);
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: white;
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.coverflow-section .swiper', {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      loop: true,
      coverflowEffect: {
        rotate: {{ section.settings.rotate }},
        stretch: {{ section.settings.stretch }},
        depth: {{ section.settings.depth }},
        modifier: 1,
        slideShadows: false,
      },
      navigation: {
        nextEl: '.coverflow-section .swiper-button-next',
        prevEl: '.coverflow-section .swiper-button-prev',
      },
      keyboard: { enabled: true },
      {% if section.settings.autoplay %}
      autoplay: {
        delay: {{ section.settings.autoplay_delay }},
        disableOnInteraction: false,
      },
      {% endif %}
      breakpoints: {
        1024: { slidesPerView: {{ section.settings.slides_desktop }} },
        768: { slidesPerView: {{ section.settings.slides_tablet }} },
        0: { slidesPerView: {{ section.settings.slides_mobile }} }
      }
    });
  });
</script>