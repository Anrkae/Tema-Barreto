{% schema %}
{
  "name": "Coverflow Carousel",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "titulo",
      "label": "Título",
      "default": "Destaques"
    },
    {
      "type": "checkbox",
      "id": "exibir_titulo",
      "label": "Exibir título",
      "default": true
    },
    {
      "type": "color",
      "id": "cor_titulo",
      "label": "Cor do título",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Proporção da imagem",
      "default": "landscape",
      "options": [
        { "value": "landscape", "label": "Paisagem" },
        { "value": "square", "label": "Quadrado" },
        { "value": "portrait", "label": "Retrato" },
        { "value": "free", "label": "Livre" }
      ]
    },
    {
      "type": "select",
      "id": "tamanho_card",
      "label": "Tamanho dos cards",
      "default": "medio",
      "options": [
        { "value": "pequeno", "label": "Pequeno" },
        { "value": "medio", "label": "Médio" },
        { "value": "grande", "label": "Grande" },
        { "value": "extra", "label": "Extra grande" }
      ]
    },
    {
      "type": "checkbox",
      "id": "ativar_blur",
      "label": "Ativar efeito Glassmorphism (blur)",
      "default": true
    },
    {
      "type": "color",
      "id": "cor_fundo_card",
      "label": "Cor de fundo dos cards",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "cor_borda",
      "label": "Cor da borda dos cards",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "espessura_borda",
      "label": "Espessura da borda (px)",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "arredondamento",
      "label": "Arredondamento dos cards (px)",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_card",
      "label": "Padding interno dos cards (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    },
    {
      "type": "range",
      "id": "stretch",
      "label": "Stretch (espaçamento lateral)",
      "min": 0,
      "max": 300,
      "step": 10,
      "default": 80
    },
    {
      "type": "range",
      "id": "rotate",
      "label": "Rotate (graus de rotação)",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "depth",
      "label": "Depth (profundidade 3D)",
      "min": 0,
      "max": 1000,
      "step": 50,
      "default": 300
    },
    {
      "type": "range",
      "id": "modifier",
      "label": "Modifier (intensidade do efeito)",
      "min": 0.1,
      "max": 3,
      "step": 0.1,
      "default": 1
    },
    {
      "type": "range",
      "id": "slides_desktop",
      "label": "Slides visíveis (desktop)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_tablet",
      "label": "Slides visíveis (tablet)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "slides_mobile",
      "label": "Slides visíveis (mobile)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Ativar autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "label": "Autoplay delay (ms)",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 3000
    },
    {
      "type": "checkbox",
      "id": "navegacao",
      "label": "Exibir botões de navegação",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "paginacao",
      "label": "Exibir bolinhas de paginação",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Produto",
      "settings": [
        {
          "type": "product",
          "id": "produto",
          "label": "Selecionar produto"
        }
      ]
    },
    {
      "type": "image_link",
      "name": "Imagem + Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagem",
          "label": "Imagem"
        },
        {
          "type": "text",
          "id": "texto",
          "label": "Texto abaixo da imagem",
          "default": "Texto opcional"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link do card"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coverflow Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}