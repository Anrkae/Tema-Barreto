{% schema %}
{
  "name": "Coverflow",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "titulo",
      "label": "Título da seção",
      "default": "Destaques"
    },
    {
      "type": "select",
      "id": "tamanho_card",
      "label": "Tamanho dos cards",
      "default": "medio",
      "options": [
        { "value": "pequeno", "label": "Pequeno" },
        { "value": "medio", "label": "Médio" },
        { "value": "grande", "label": "Grande" }
      ]
    },
    {
      "type": "range",
      "id": "stretch",
      "label": "Stretch (espaçamento lateral)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 80
    },
    {
      "type": "range",
      "id": "rotate",
      "label": "Rotate (graus de rotação)",
      "min": 0,
      "max": 90,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "depth",
      "label": "Depth (profundidade 3D)",
      "min": 0,
      "max": 1000,
      "step": 50,
      "default": 200
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Ativar autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "label": "Autoplay delay (ms)",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 3000
    },
    {
      "type": "checkbox",
      "id": "mostrar_titulo_card",
      "label": "Mostrar título nos cards",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagem",
          "label": "Imagem"
        },
        {
          "type": "url",
          "id": "link_produto",
          "label": "Link do produto"
        },
        {
          "type": "text",
          "id": "titulo_card",
          "label": "Título do card",
          "default": "Título do Produto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coverflow",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="coverflow-section page-width">
  {% if section.settings.titulo != blank %}
    <h2 class="section-title">{{ section.settings.titulo }}</h2>
  {% endif %}

  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <a href="{{ block.settings.link_produto }}" 
             class="quick-add-button"
             data-product-url="{{ block.settings.link_produto }}">
            {% if block.settings.imagem != blank %}
              <img 
                src="{{ block.settings.imagem | image_url: width: 600 }}" 
                alt="{{ block.settings.titulo_card | escape }}" 
                class="card-img">
            {% endif %}
          </a>
          {% if section.settings.mostrar_titulo_card and block.settings.titulo_card != blank %}
            <p class="product-title">{{ block.settings.titulo_card }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<style>
  .coverflow-section {
    margin: 40px 0 60px;
    text-align: center;
  }

  .swiper {
    width: 100% !important;
    max-width: 1400px !important;
    margin: auto;
  }

  .swiper-slide {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 40px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 70% !important;
    transition: all 0.4s ease;
  }

  .swiper-slide:hover {
    filter: contrast(1.07) saturate(1.1);
  }

  .swiper-slide-prev,
  .swiper-slide-next {
    opacity: 0.6;
  }

  .swiper-slide:not(.swiper-slide-active):not(.swiper-slide-prev):not(.swiper-slide-next) {
    opacity: 0.2;
  }

  .card-img {
    border-radius: 15px !important;
    margin-bottom: 15px !important;
    transition: transform 0.4s ease !important;
    width: 100% !important;
    height: auto !important;
  }

  .card-img:hover {
    transform: scale(1.1) translateY(-10px) !important;
  }

  .product-title {
    color: white;
    margin-top: 10px !important;
    font-size: 1.1rem !important;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: white !important;
  }

  /* Tamanhos dos cards */
  {% if section.settings.tamanho_card == 'pequeno' %}
    .card-img { max-width: 250px !important; }
  {% elsif section.settings.tamanho_card == 'medio' %}
    .card-img { max-width: 350px !important; }
  {% elsif section.settings.tamanho_card == 'grande' %}
    .card-img { max-width: 500px !important; }
  {% endif %}
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiper = new Swiper('.coverflow-section .swiper', {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 'auto',
      loop: true,

      coverflowEffect: {
        rotate: {{ section.settings.rotate }},
        stretch: {{ section.settings.stretch }},
        depth: {{ section.settings.depth }},
        modifier: 1,
        slideShadows: false,
      },

      navigation: {
        nextEl: '.coverflow-section .swiper-button-next',
        prevEl: '.coverflow-section .swiper-button-prev',
      },

      keyboard: { enabled: true },

      {% if section.settings.autoplay %}
      autoplay: {
        delay: {{ section.settings.autoplay_delay }},
        disableOnInteraction: false,
      },
      {% endif %}
    });

    // Ativa o drawer do tema Focal
    document.querySelectorAll('.coverflow-section .quick-add-button').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const url = this.dataset.productUrl;
        window.Shopify.theme.quickAddDrawer.open(url);
      });
    });
  });
</script>