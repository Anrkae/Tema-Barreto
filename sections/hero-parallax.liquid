{% schema %}
{
  "name": "Hero Parallax GSAP",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagem de fundo"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Coleção 2025 chegou!"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Camisas exclusivas com até 20% off"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link do botão"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto do botão",
      "default": "Ver camisas"
    }
  ],
  "presets": [
    {
      "name": "Hero Parallax GSAP",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="hero-parallax-wrapper" data-gsap-parallax>
  {% if section.settings.background_image %}
    <div 
      class="hero-parallax-bg" 
      style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});">
    </div>
  {% endif %}

  <div class="hero-parallax-content">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    {% if section.settings.button_link %}
      <a href="{{ section.settings.button_link }}" class="hero-parallax-btn">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.hero-parallax-wrapper {
  position: relative;
  height: 100vh;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
}

.hero-parallax-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 130%;
  background-size: cover;
  background-position: center;
  z-index: 1;
  will-change: transform;
}

.hero-parallax-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 2rem;
  color: #fff;
  max-width: 90%;
  margin-top: 20vh;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 1rem;
}

.hero-parallax-content h1 {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.hero-parallax-content p {
  font-size: 1.1rem;
  margin-bottom: 1.2rem;
}

.hero-parallax-btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: #8b5cf6;
  border-radius: 999px;
  color: white;
  font-weight: 600;
  text-decoration: none;
  transition: background 0.3s ease;
}

.hero-parallax-btn:hover {
  background: #7c3aed;
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (typeof gsap === "undefined" || typeof ScrollTrigger === "undefined") return;

    const section = document.querySelector('[data-gsap-parallax]');
    const bg = section.querySelector('.hero-parallax-bg');

    gsap.to(bg, {
      yPercent: 20,
      ease: "none",
      scrollTrigger: {
        trigger: section,
        start: "top top",
        end: "bottom top",
        scrub: true
      }
    });
  });
</script>