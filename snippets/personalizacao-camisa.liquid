{%- comment -%}
  Renderiza os campos SEMPRE no HTML, mas visíveis apenas se a variante inicial for "Personalizar"
{%- endcomment -%}

{%- assign show_customization_fields_on_load = false -%}
{%- if product.selected_or_first_available_variant.title contains 'Personalizar' or product.selected_or_first_available_variant.title contains 'Personalizada' -%}
  {%- assign show_customization_fields_on_load = true -%}
{%- endif -%}

<style>
  .floating-group {
    position: relative !important;
    margin-bottom: 20px !important;
    margin-top: 10px !important; /* Espaço para o label não cortar o conteúdo de cima */
  }

  .floating-group .input__field {
    width: 100% !important;
    padding: 12px 14px !important;
    height: 50px !important;
    border: 2px solid rgba(255, 255, 255, 0.4) !important; /* Borda semi-transparente */
    border-radius: 12px !important;
    background: transparent !important;
    color: #fff !important; /* Ajuste para branco se o fundo for escuro */
    font-size: 16px !important;
    outline: none !important;
  }

  .floating-group label {
    position: absolute !important;
    left: 12px !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    padding: 0 6px !important;
    color: rgba(255, 255, 255, 0.8) !important;
    font-size: 16px !important;
    pointer-events: none !important;
    transition: all 0.2s ease-out !important;
    
    /* EFEITO PARA GRADIENTES: */
    background: rgba(255, 255, 255, 0.1) !important; /* Um "véu" bem clarinho */
    backdrop-filter: blur(8px) !important; /* Desfoca o gradiente atrás do texto */
    -webkit-backdrop-filter: blur(8px) !important;
    border-radius: 2px !important;
  }

  /* ESTADO ATIVO: Quando focado ou preenchido */
  .floating-group .input__field:focus + label,
  .floating-group .input__field:not(:placeholder-shown) + label {
    top: 0 !important;
    font-size: 12px !important;
    font-weight: bold !important;
    color: #fff !important;
    transform: translateY(-50%) !important;
    /* Aumentamos um pouco a opacidade do fundo no topo */
    background: rgba(0, 0, 0, 0.2) !important; 
  }

  /* Placeholder some para não bater no label */
  .floating-group .input__field::placeholder {
    color: transparent !important;
  }
  
  .floating-group .input__field:focus::placeholder {
    color: rgba(255, 255, 255, 0.4) !important;
  }
</style>

<div id="customization-fields"
     class="customization-fields"
     style="margin-bottom: 20px; display: {{ show_customization_fields_on_load | default: false | ternary: 'block', 'none' }};">

  <div class="product-form__line-item-property floating-group">
    <input id="custom_name" type="text" placeholder="Ex: Neymar" name="properties[Nome personalizado]" class="input__field">
    <label for="custom_name">Nome</label>
  </div>

  <div class="product-form__line-item-property floating-group" style="margin-top: 1.5rem !important;">
    <input id="custom_number" type="text" placeholder="Ex: 10" name="properties[Número personalizado]" class="input__field">
    <label for="custom_number">Número</label>
  </div>

  <div id="aviso" style="margin-top: 8px; display: flex; justify-content: center; align-items: center; padding: 10px 0;">
    <label style="color: #fff !important;"> ⓘ Valor da personalização: R$18,00 </label>
  </div>

</div>
