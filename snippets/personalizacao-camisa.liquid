{%- comment -%}
  Renderiza os campos SEMPRE no HTML, mas visíveis apenas se a variante inicial for "Personalizar"
{%- endcomment -%}

{%- assign show_customization_fields_on_load = false -%}
{%- if product.selected_or_first_available_variant.title contains 'Personalizar' or product.selected_or_first_available_variant.title contains 'Personalizada' -%}
  {%- assign show_customization_fields_on_load = true -%}
{%- endif -%}

<style>
  .floating-group {
    position: relative !important;
    margin-bottom: 20px !important;
    margin-top: 15px !important;
  }

  /* 1. REMOVE A BORDA DO TEMA FOCAL */
  .floating-group .input__field {
    width: 100% !important;
    padding: 12px 14px !important;
    height: 50px !important;
    background: transparent !important;
    color: #fff !important;
    font-size: 16px !important;
    outline: none !important;
    position: relative !important;
    z-index: 2 !important;
    /* Anulando bordas e sombras do tema */
    border: none !important; 
    box-shadow: none !important;
    -webkit-appearance: none !important;
  }

  /* 2. CRIA A NOSSA BORDA ÚNICA QUE PODE SER CORTADA */
  .floating-group::before {
    content: "" !important;
    position: absolute !important;
    inset: 0 !important;
    border: 1px solid rgba(255, 255, 255, 0.4) !important; /* Cor da borda */
    border-radius: 4px !important;
    pointer-events: none !important;
    z-index: 1 !important;
    transition: all 0.2s ease !important;
    /* Começa sem corte */
    clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%) !important;
  }

  /* 3. EFEITO DE CORTE QUANDO FOCADO OU PREENCHIDO */
  .floating-group:focus-within::before,
  .floating-group:has(input:not(:placeholder-shown))::before {
    border-color: #fff !important; /* Cor da borda quando ativa */
    /* O polígono abaixo "abre" um buraco no topo da borda para o label passar */
    clip-path: polygon(
      0% 0%, 
      10px 0%, 
      10px -15px, 
      65px -15px, 
      65px 0%, 
      100% 0%, 
      100% 100%, 
      0% 100%
    ) !important;
  }

  /* 4. O LABEL */
  .floating-group label {
    position: absolute !important;
    left: 12px !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    color: rgba(255, 255, 255, 0.7) !important;
    font-size: 16px !important;
    pointer-events: none !important;
    transition: all 0.2s ease !important;
    z-index: 10 !important;
    margin: 0 !important;
    background: transparent !important; /* Transparente para ver o gradiente */
  }

  /* 5. LABEL SUBINDO PARA O BURACO DA BORDA */
  .floating-group .input__field:focus + label,
  .floating-group .input__field:not(:placeholder-shown) + label {
    top: 0 !important;
    font-size: 12px !important;
    font-weight: 600 !important;
    color: #fff !important;
    transform: translateY(-50%) !important;
  }

  /* Placeholder some para não poluir */
  .floating-group .input__field::placeholder {
    color: transparent !important;
  }
  
  .floating-group .input__field:focus::placeholder {
    color: rgba(255, 255, 255, 0.4) !important;
  }
</style>

<div id="customization-fields"
     class="customization-fields"
     style="margin-bottom: 20px; display: {{ show_customization_fields_on_load | default: false | ternary: 'block', 'none' }};">

  <div class="product-form__line-item-property floating-group">
    <input id="custom_name" type="text" placeholder="Ex: Neymar" name="properties[Nome personalizado]" class="input__field">
    <label for="custom_name">Nome</label>
  </div>

  <div class="product-form__line-item-property floating-group" style="margin-top: 1.5rem !important;">
    <input id="custom_number" type="text" placeholder="Ex: 10" name="properties[Número personalizado]" class="input__field">
    <label for="custom_number">Número</label>
  </div>

  <div id="aviso" style="margin-top: 8px; display: flex; justify-content: center; align-items: center; padding: 10px 0;">
    <label style="color: #fff !important; background: transparent !important;"> ⓘ Valor da personalização: R$18,00 </label>
  </div>

</div>
