{%- comment -%}
  Renderiza os campos SEMPRE no HTML, mas visíveis apenas se a variante inicial for "Personalizar"
{%- endcomment -%}

{%- assign show_customization_fields_on_load = false -%}
{%- if product.selected_or_first_available_variant.title contains 'Personalizar' or product.selected_or_first_available_variant.title contains 'Personalizada' -%}
  {%- assign show_customization_fields_on_load = true -%}
{%- endif -%}

<style>
  .floating-group {
    position: relative !important;
    margin-bottom: 15px !important;
    display: block !important;
  }

  /* O Input: Aumentamos o padding-top para dar espaço ao label quando ele subir */
  .floating-group .input__field {
    width: 100% !important;
    height: 55px !important; /* Um pouco mais alto para acomodar o texto + label */
    padding: 20px 12px 6px 12px !important; /* Padding maior no topo */
    border: 1px solid rgba(255, 255, 255, 0.3) !important; /* Borda semi-transparente para combinar com gradientes */
    border-radius: 6px !important;
    background: rgba(255, 255, 255, 0.1) !important; /* Fundo sutil para o input */
    color: #fff !important; /* Cor do texto digitado */
    font-size: 16px !important;
    outline: none !important;
    transition: border-color 0.2s !important;
  }

  /* O Label: Começa centralizado verticalmente */
  .floating-group label {
    position: absolute !important;
    left: 12px !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    color: rgba(255, 255, 255, 0.7) !important;
    font-size: 16px !important;
    transition: all 0.2s ease-out !important;
    pointer-events: none !important;
    margin: 0 !important;
    background: transparent !important; /* Sem cor de fundo para não quebrar o gradiente */
  }

  /* ESTADO ATIVO: Quando focado ou com texto, o label sobe para o topo INTERNO */
  .floating-group .input__field:focus + label,
  .floating-group .input__field:not(:placeholder-shown) + label {
    top: 14px !important; /* Move para o topo do container */
    font-size: 11px !important;
    font-weight: 700 !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
    color: #fff !important;
    opacity: 0.9 !important;
  }

  /* Esconde o placeholder padrão para não encavalar com o label */
  .floating-group .input__field::placeholder {
    color: transparent !important;
  }
  
  /* Mostra o placeholder apenas quando focado para servir de guia */
  .floating-group .input__field:focus::placeholder {
    color: rgba(255, 255, 255, 0.4) !important;
  }

  .floating-group .input__field:focus {
    border-color: #fff !important; /* Realce na borda ao focar */
  }
</style>

<div id="customization-fields"
     class="customization-fields"
     style="margin-bottom: 20px; display: {{ show_customization_fields_on_load | default: false | ternary: 'block', 'none' }};">

  <div class="product-form__line-item-property floating-group">
    <input id="custom_name" type="text" placeholder="Ex: Neymar" name="properties[Nome personalizado]" class="input__field">
    <label for="custom_name">Nome</label>
  </div>

  <div class="product-form__line-item-property floating-group" style="margin-top: 1rem !important;">
    <input id="custom_number" type="text" placeholder="Ex: 10" name="properties[Número personalizado]" class="input__field">
    <label for="custom_number">Número</label>
  </div>

  <div id="aviso" style="margin-top: 8px; display: flex; justify-content: center; align-items: center; padding: 10px 0;">
    <label style="color: #fff !important;"> ⓘ Valor da personalização: R$18,00 </label>
  </div>

</div>
